<%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/nav') %>
    <main class="container mx-auto p-8 mt-10 grid grid-cols-1 md:grid-cols-2 gap-8">
      <% registeredHomes.forEach(home => { %>
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition duration-300">
          <img class="w-full h-60 object-cover" src="<%= home.photoURL %>" alt="<%= home.houseName %>">
          <div class="p-6">
            <h3 class="text-2xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
            <p class="text-gray-600 mb-1"><strong>Location:</strong> <%= home.location %></p>
            <p class="text-gray-600 mb-1"><strong>Price:</strong> ₹<%= home.price %> / night</p>
            <div class="flex items-center mt-2">
              <span class="text-yellow-400 text-xl">★</span>
              <span class="ml-2 text-gray-700"><%= home.rating %> / 5</span>
            </div>
          </div>
        </div>
      <% }) %>
    </main>
  
  </body>
</html>
